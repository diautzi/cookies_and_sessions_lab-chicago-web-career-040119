<ul>
  <% cart.each do |product| %>
  <li><%= product %></li>
  <% end %>
</ul>

<%= form_tag ({controller: "products", action: "add_to_cart", method: "post"}) do  %>
  <input name="product" >
  <input type="submit" value="add to cart">
<% end %>

<!-- homepage:
     adds items to the cart when they're submitted via its form
     products/index
    shows everything in the cart
-->
